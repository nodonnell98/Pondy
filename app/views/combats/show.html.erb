<div class="w-full flex flex-col text-center">
  <h1 class="font-bold text-5xl mb-5">COMBAT</h1>
  <div class="grid grid-cols-2 gap-12">
    <% [@combat.frog, @combat.enemy].each do |fighter| %>
      <div class="flex flex-col p-3 border rounded-md border-black justify-start items-center">
        <h1 class="font-bold text-5xl"><%= fighter.name %></h1>
        <h2 class="text-xl">Level <%= fighter.level %></h2>
        <div class="bg-red-700 text-white text-center p-1 rounded-md w-full mt-3">
          <h2><%= fighter.health %>/<%= fighter.max_health %></h2>
        </div>
        <div class="w-full grid grid-cols-2 gap-10 p-3 border border-black rounded-md mt-5">
          <% fighter.attacks.each do |attack| %>
            <div class="flex flex-col justify-center items-center border border-black rounded-md bg-green-100 p-3">
              <h3 class="font-bold"><%= attack.name %></h3>
              <p>Damage: <%= attack.damage %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>