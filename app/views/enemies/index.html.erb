<div class="w-full">
  <h1 class="font-bold mb-5 text-4xl">Bounty Board</h1>

  <div class="w-full grid grid-cols-4">
  <% @enemies.each do |enemy| %>
    <div class="w-72 border border-green-700 rounded-md flex flex-col justify-start space-y-3 p-5 shadow-sm">
  <div class="flex flex-col">
    <h2 class="font-bold mb-3"><%= enemy.name %> - Level <%= enemy.level %> </h2>
    <h3 class="font-bold text-sm">Resources </h3>
    <p class="text-sm"><%= enemy.resource_qty %> <%= enemy.resource_type %></p>
  </div>

  <div>
    <%= form_with model: Combat.new, url: combats_path, local: true do |form| %>
      <%= form.select :frog_id, options_for_select(Frog.all.map { |frog| [ "#{frog.name} - Level #{frog.level}", frog.id ] }), {}, { class: 'bg-white rounded-md p-2 border border-gray-400' } %>
      <%= form.hidden_field :enemy_id, value: enemy.id %>
      <%= form.submit 'Hunt', class: 'bg-red-700 text-white rounded-md p-2 mt-2' %>
    <% end %>
  </div>
</div>

  <% end %>
</div>
</div>